{
	"name": "magic-hate-ball",
	"version": "0.0.1",
	"description": "A magic 8-ball web application with a twist.",
	"type": "module",
	"packageManager": "pnpm@10.18.1",
	"scripts": {
		"build-ts": "swc ./js --delete-dir-on-start --strip-leading-paths --out-dir magic_hate_ball/static/js --out-file-extension js --extensions .ts",
		"build": "pnpm build-ts && node build-js.js",
		"lint:css": "stylelint 'static/css/**/*.css'",
		"lint": "pnpm run lint:css"
	},
	"devDependencies": {
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.13.5",
		"esbuild": "^0.27.2",
		"eslint": "^9.37.0",
		"stylelint": "^17.0.0",
		"stylelint-config-standard": "^40.0.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"gl-matrix": "^3.4.4"
	}
}
